<% if @ride.errors.any? %>
  <ul class="Ride_Errors">
    <% for message_error in @ride.errors.full_messages %>
      <li class="alert alert-danger alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close"> &times;
        </a>
        <%= message_error %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="create-ride">
  <div class="form">
    <h4>Create Ride Offer</h4>
    <%= form_for(:ride, url: { controller: 'rides', action: 'create'}) do |f| %>
      <%= f.text_field :origin, placeholder: 'Origin', required: true, id: 'origin'%>
      <%= f.text_field :destination, placeholder: 'Destination', required: true, id: 'destination' %>
      <%= f.text_field :take_off_time, type: 'time', 
          placeholder: 'Depature Time', required: true, class: 'time' %>
      <%= f.text_field :take_off_date, type: 'date', 
          placeholder: 'Departure Date', required: true, class: 'date' %>
      <%= f.text_field :vehicle_id, value: @vehicle_id, type: 'hidden' %>
      <%= f.submit :'Create Ride', class: 'submit-button' %>
      <p class="message">
        <a href="<%= rides_path %>">Cancel</a>
      </p>
    <% end %>
  </div>
</div>
